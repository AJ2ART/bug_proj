<% if bug == @current_bug %>
    <div id="current_bug" class="description">
<% else %>
    <div class="description">
<% end %>

        <div class="description_title"> <%= bug.title %> </div>
        <div class="description_info">
            <span class="date"> <%= bug.updated_at.to_formatted_s(:long_ordinal) %>
            </span>
            <span class="author"> By <%= (bug.author.try(:lname) || "NA") %>
            </span>
        </div>
        <div class="description_text"> <%= bug.description %> </div>
        <div class="actions">
            <%= link_to 'Show', bug %>
            <%= link_to 'Edit', edit_bug_path(bug), remote: true %>
            <%= link_to 'Destroy', bug, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %>
        </div>
    </div>